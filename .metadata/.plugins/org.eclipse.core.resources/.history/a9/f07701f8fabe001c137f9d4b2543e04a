import java.util.Scanner;

public class j1 {

	public static void main(String[] args) {
		// TODO 자동 생성된 메소드 스텁

		Scanner sc = new Scanner(System.in);
		
		int year,month,week,day,i; 
		int monthset[] = {31,28,31,30,31,30,31,31,30,31,30,31}; // 달 일수
		System.out.println("년도를 입력하세요.");
		year = sc.nextInt();
		System.out.println("달을 입력하세요.");
		month = sc.nextInt();
		
		if(year%100 == 0 || year%100 == 0 && year%400 == 0) // 윤년계산
			monthset[1] = 29;
		else
			monthset[1] = 28;
		
		day = (year-1)*365+(year-1)/4-(year-1)/100+(year-1)/400;
		for(i=0; i<month-1; i++) {
			day += monthset[i];
		}
		week = day%7;
		System.out.printf("-------------------%n년 %n월 달력-------------------",year,month);
		System.out.printf("%s\t%s\t%s\t%s\t%s\t%s\t%s\t\n","월","화","수","목","금","토","일");   
		for(i=0;i<week;i++) {
			System.out.print("\t");
		}
		for(i=1; i<=monthset[month-1]; i++) {
			System.out.printf("%d\t", i);
			week++;
		if(week%7 == 0) 
			System.out.println();
		}
		if(week%7 != 0) 
			System.out.println();
		}
	
}
