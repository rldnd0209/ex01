import java.util.*;
public class ex1 {
   public static void main(String[] args) {
      
	   float pay;
	   int year;
	  
	   Scanner sc = new Scanner(System.in);
	   System.out.println("나이를 입력하세요. ");
	   year = sc.nextInt();
	   
	   if (year >= 0 && year<=3 || year >= 65) {
		   pay = 2500-(2500*1);
	   }else if (year >= 4 && year <= 13) {
		   pay = (2500-(2500*0.5f));
	   }else if (year >= 14 && year <= 19) {
		   pay = (2500-(2500*0.25f));
	   }else (year >= 20 && year <= 64) {
		   pay = 2500;
		   System.out.println("내실돈은 "+ pay +"원 입니다");
	   }
      }
}